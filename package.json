{
  "name": "thanksy-dashboard-ts",
  "version": "2.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "npx poi --require ts-node/register --config poi.config.js",
    "build": "npx poi build --require ts-node/register --config poi.config.js ",
    "test:e2e": "npx cypress run --reporter json",
    "test:unit": "npx jest",
    "test": "npm run test:unit ",
    "lint": "npx tslint --project tsconfig.json  --format stylish",
    "cypress:run": "npx cypress run",
    "cypress:open": "npx cypress open"
  },
  "dependencies": {
    "connected-react-router": "^6.2.2",
    "emoji-regex": "^7.0.3",
    "emojilib": "^2.4.0",
    "history": "^4.7.2",
    "moment": "^2.24.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-scrolllock": "^4.0.1",
    "redux": "^4.0.1",
    "redux-loop": "^4.2.6",
    "sanitize-html": "^1.20.0",
    "twemoji": "^11.3.0"
  },
  "devDependencies": {
    "@types/emoji-regex": "^7.0.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/history": "^4.7.2",
    "@types/jest": "^23.3.13",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.21",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/sanitize-html": "^1.18.2",
    "awesome-typescript-loader": "^5.2.1",
    "cypress": "^3.1.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.6.0",
    "jest-css-modules": "^1.1.0",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "offline-plugin": "^5.0.6",
    "poi": "^9.6.13",
    "poi-preset-react": "^9.2.1",
    "poi-preset-typescript": "^9.0.2",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.3.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx)"
    ],
    "setupFiles": [
      "<rootDir>/test/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "@/(.*)": "<rootDir>/src/$1",
      "^.+\\.scss$": "<rootDir>/test/stub.ts",
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test && npm run test:e2e"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
