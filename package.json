{
  "name": "thanksy-webapp",
  "version": "2.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "author": "Grzegorz Moskal <grzegorz.moskal@tooploox.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tooploox/thanksy-webapp"
  },
  "scripts": {
    "start": "npx poi --require ts-node/register --config poi.config.js",
    "build": "npx poi build --require ts-node/register --config poi.config.js && cp src/assets/cheer.mp3 dist/assets/",
    "fake-api": "npx json-server --watch ./cypress/support/db.json --middlewares ./cypress/support/auth.js --routes ./cypress/support/routes.json",
    "test:e2e": "npx cypress run --reporter json",
    "test:unit": "npx jest",
    "test": "npm run test:unit ",
    "lint": "npx tslint --project tsconfig.json  --format stylish",
    "cypress:run": "npx cypress run",
    "cypress:open": "npx cypress open"
  },
  "dependencies": {
    "emoji-regex": "7.0.3",
    "emojilib": "2.4.0",
    "luxon": "1.11.2",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-motion": "0.5.2",
    "react-redux": "6.0.0",
    "react-scrolllock": "4.0.1",
    "redux": "4.0.1",
    "redux-loop": "4.5.4",
    "twemoji": "11.3.0",
    "@types/emoji-regex": "7.0.0",
    "@types/luxon": "1.11.0",
    "@types/node": "11.9.4",
    "@types/react": "16.8.3",
    "@types/react-dom": "16.8.0",
    "@types/react-motion": "0.0.27",
    "@types/react-redux": "7.0.1",
    "@types/react-test-renderer": "16.8.1",
    "awesome-typescript-loader": "5.2.1",
    "identity-obj-proxy": "3.0.0",
    "node-sass": "4.11.0",
    "poi": "9.6.13",
    "poi-preset-react": "9.2.1",
    "poi-preset-typescript": "9.0.2",
    "react-test-renderer": "16.8.1",
    "sass-loader": "7.1.0",
    "ts-node": "8.0.2",
    "@types/jest": "24.0.3",
    "@types/enzyme": "3.1.17",
    "typescript": "3.3.3",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/jest-diff": "20.0.0"
  },
  "devDependencies": {
    "cypress": "3.1.5",
    "enzyme": "3.8.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-consistent-codestyle": "1.15.0",
    "tslint-plugin-prettier": "2.0.1",
    "jest": "24.1.0",
    "jest-css-modules": "1.1.0",
    "json-server": "0.14.2",
    "enzyme-adapter-react-16": "1.9.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx)"
    ],
    "setupFiles": [
      "<rootDir>/test/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "@/(.*)": "<rootDir>/src/$1",
      ".+\\.scss$": "<rootDir>/test/stub.ts",
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test && npm run test:e2e"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
